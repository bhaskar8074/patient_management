<%= form_with(model: patient, local: true, class: 'row g-3') do |f| %>
  <% if patient.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(patient.errors.count, "error") %> prevented this patient from being saved:</h4>
      <ul>
        <% patient.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, class: 'form-control' %>
  </div>

  <div class="col-md-6">
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, class: 'form-control' %>
  </div>

  <div class="col-md-6">
    <%= f.label :date_of_birth, class: 'form-label' %>
    <%= f.date_field :date_of_birth, class: 'form-control' %>
  </div>

  <div class="col-md-6">
    <%= f.label :email, class: 'form-label' %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= f.label :next_appointment_date, class: 'form-label' %>
    <%= f.datetime_local_field :next_appointment_date, class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Back', patients_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
