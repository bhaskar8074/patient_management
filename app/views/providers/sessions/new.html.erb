<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="text-center mb-4">
        <div class="d-inline-block mb-3">
          <i class="fas fa-hospital-user fa-3x" style="color: #3498db;"></i>
        </div>
        <h2 class="fw-bold" style="color: #2c3e50;">Welcome to Exact-Rx</h2>
        <p class="text-muted">Sign in to your provider account</p>
      </div>

      <div class="card">
        <div class="card-header bg-white py-3">
          <h3 class="text-center mb-0">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In
          </h3>
        </div>
        
        <div class="card-body p-4">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-4">
              <div class="form-floating">
                <%= f.email_field :email, autofocus: true, 
                    class: "form-control form-control-lg",
                    placeholder: "Email",
                    style: "height: 60px;" %>
                <%= f.label :email, class: "text-muted" %>
              </div>
            </div>

            <div class="mb-3">
              <div class="form-floating">
                <%= f.password_field :password,
                    class: "form-control form-control-lg",
                    placeholder: "Password",
                    style: "height: 60px;" %>
                <%= f.label :password, class: "text-muted" %>
              </div>
              <%- if devise_mapping.recoverable? %>
                <div class="text-end mt-2">
                  <%= link_to "Forgot password?", new_password_path(resource_name), 
                      class: "text-decoration-none", style: "color: #3498db;" %>
                </div>
              <% end %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "Keep me signed in", class: "form-check-label text-muted" %>
                </div>
              </div>
            <% end %>

            <div class="d-grid gap-3">
              <%= f.submit "Sign in", class: "btn btn-primary btn-lg py-3" %>
              
              <%- if devise_mapping.registerable? %>
                <%= link_to new_registration_path(resource_name), 
                    class: "btn btn-outline-secondary btn-lg py-3" do %>
                  <i class="fas fa-user-plus me-2"></i>Create New Account
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="text-center mt-4">
        <p class="text-muted small">
          <i class="fas fa-shield-alt me-2" style="color: #27ae60;"></i>
          Secured by industry standard encryption
        </p>
      </div>
    </div>
  </div>
</div>

<style>
.form-floating > label {
  padding-left: 1rem;
}

.form-floating > .form-control {
  padding: 1rem;
}

.form-check-input:checked {
  background-color: #3498db;
  border-color: #3498db;
}

.btn-outline-secondary:hover {
  background-color: #ecf0f1;
  color: #2c3e50;
  border-color: #bdc3c7;
}
</style>